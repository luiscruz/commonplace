<!doctype html>
<head>
	<title><%= @name %> | <%= settings.sitename %></title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0;">
	<link href='http://fonts.googleapis.com/css?family=Droid+Sans' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" href="/css/bootstrap.css">	
	<link rel="stylesheet" href="/css/tree.css">	
	<link rel="stylesheet" href="/css/bootstrap-markdown.min.css">	
  
  <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
  <script src="https://code.jquery.com/jquery.js"></script>
  <!-- Include all compiled plugins (below), or include individual files as needed -->
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/bootstrap-markdown.js"></script>
  <script src="/js/markdown.js"></script>

</head>

<body>
	<section id="content">
    <%= yield_content :breadcrumb %>
		<div id="page" class="page-header" style="margin-top: -5px">
			<h1 class=" container" ><%= @name %></h1>
			<% if @alert %>
				<div class="alert alert-danger"><%= @alert %></div>
			<% end %>
    </div>	

  <div class="container">
			<%= yield %>      
    
				
		<% if !@error %>
      <nav class="btn-toolbar pull-right" role="toolbar">
        <div class="btn-group">
           <a href="/" class="btn btn-default <%= "disabled" if @name == "Home" %>">Home</a>
           <a href="/list" class="btn btn-default <%= "disabled" if @name == "Known pages" %>">Page list</a>

				<% if @page && !@editing && !settings.readonly %>
					<a href="/p/new" class="btn btn-default">New page</a>
					<a href="/p/<%= @page.permalink %>/edit" class="btn btn-primary">Edit this</a>
				<% elsif @newpage %>
					<a href="/p/new/<%= @newpage %>" class="btn small primary">Create <%= @wiki.file_to_pagename(@newpage) %></a>
				<% end %>
        </div>
			</nav>
		<% end %>
    </div>
	</section>
		
  <footer>
    <br/>
  <div class="navbar navbar-default">
    <small class="navbar-text"> 
      Maintained by <a href="http://luiscruz.pt.vu/" class="">Luis Cruz</a>.  MIT License.
    </small>
    <small class="navbar-text navbar-right"> 
      Source code available at
      <a class="" href="https://github.com/luiscruz/cp_usability_evaluation/" target="_blank">Github</a>.&nbsp;&nbsp;
    </small>
  </div>
	</footer>
  
  <script>
  $('.markdown_editor').markdown({
    autofocus:true,
    savable:true,
  });
  </script>
</body>
</html>